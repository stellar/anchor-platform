# =============================================================================
# Stellar Network Configuration
# =============================================================================
STELLAR_NETWORK_TYPE=rpc
STELLAR_NETWORK_RPC_URL=https://soroban-testnet.stellar.org

# =============================================================================
# Secrets and Authentication
# =============================================================================

# Database credentials
SECRET_DATA_USERNAME=postgres
SECRET_DATA_PASSWORD=password

# API authentication secrets for platform and callback APIs
SECRET_PLATFORM_API_AUTH_SECRET=myAnchorToPlatformSecret1234567890
SECRET_CALLBACK_API_AUTH_SECRET=myPlatformToAnchorSecret1234567890

# JWT secrets for various SEP endpoints
SECRET_SEP6_MORE_INFO_URL_JWT_SECRET=secret_sep6_more_info_url_jwt_secret
SECRET_SEP10_JWT_SECRET=secret_sep10_secret_secret_sep10_secret
SECRET_SEP45_JWT_SECRET=secret_sep45_secret_secret_sep45_secret
SECRET_SEP24_INTERACTIVE_URL_JWT_SECRET=secret_sep24_interactive_url_jwt_secret
SECRET_SEP24_MORE_INFO_URL_JWT_SECRET=secret_sep24_more_info_url_jwt_secret

# SEP-10 signing seed for web authentication
# This value is set dynamically by ap_start.sh script and passed via environment variable

# Custody server authentication secret
SECRET_CUSTODY_SERVER_AUTH_SECRET=myPlatformToCustodySecret1234567890

# =============================================================================
# Logging Configuration
# =============================================================================
APP_LOGGING_STELLAR_LEVEL=DEBUG
APP_LOGGING_REQUEST_LOGGER_ENABLED=true

# =============================================================================
# Supported Languages
# =============================================================================
LANGUAGES=en,es-AR

# =============================================================================
# Event Processing Configuration
# =============================================================================
EVENTS_ENABLED=true
EVENTS_QUEUE_TYPE=kafka
EVENTS_QUEUE_KAFKA_BOOTSTRAP_SERVER=kafka:29092
EVENT_PROCESSOR_CALLBACK_API_REQUEST_ENABLED=true

# =============================================================================
# API Endpoints
# =============================================================================
CALLBACK_API_BASE_URL=http://reference-server:8091/
PLATFORM_API_BASE_URL=http://platform:8085
CUSTODY_SERVER_BASE_URL=http://custody-server:8086

# =============================================================================
# Database Configuration
# =============================================================================
DATA_TYPE=postgres
DATA_SERVER=db:5432
DATA_DATABASE=postgres
DATA_SCHEMA=anchor-platform
DATA_FLYWAY_ENABLED=true

# =============================================================================
# Asset Configuration
# =============================================================================
ASSETS_TYPE=file
ASSETS_VALUE=/config/assets.yaml

# =============================================================================
# Stellar Ecosystem Proposals (SEP) Configuration
# =============================================================================

# SEP-1: Stellar Information File (TOML)
SEP1_ENABLED=true
SEP1_TOML_TYPE=file
SEP1_TOML_VALUE=/config/stellar.localhost.toml

# SEP-6: Deposit and Withdrawal API
SEP6_ENABLED=true
SEP6_MORE_INFO_URL_BASE_URL=http://localhost:8091/sep6/transaction/more_info

# SEP-10: Stellar Web Authentication
SEP10_ENABLED=true
SEP10_WEB_AUTH_DOMAIN=localhost:8080
SEP10_HOME_DOMAINS=localhost:8080,*.stellar.org

# SEP-12: KYC/Customer Info
SEP12_ENABLED=true

# SEP-24: Interactive Deposit and Withdrawal
SEP24_ENABLED=true
SEP24_INTERACTIVE_URL_BASE_URL=http://localhost:8091/sep24/interactive
SEP24_MORE_INFO_URL_BASE_URL=http://localhost:8091/sep24/transaction/more_info

# SEP-31: Direct Payments
SEP31_ENABLED=true

# SEP-38: Anchor-Anchor Quoting
SEP38_ENABLED=true

# SEP-45: Smart Contract Web Authentication
SEP45_ENABLED=true
SEP45_WEB_AUTH_DOMAIN=localhost:8080
SEP45_HOME_DOMAINS=localhost:8080,*.stellar.org
SEP45_WEB_AUTH_CONTRACT_ID=CD3LA6RKF5D2FN2R2L57MWXLBRSEWWENE74YBEFZSSGNJRJGICFGQXMX

# =============================================================================
# Client Configuration
# =============================================================================
CLIENTS_TYPE=file
CLIENTS_VALUE=/config/clients.yaml
